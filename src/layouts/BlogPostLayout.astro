---
const {frontmatter} = Astro.props;
---
<html lang="en">
    <head>
		<meta charset="utf-8" />
        <title>{frontmatter.title}</title>
    </head>
    <body> 
        <div class="flex flex-col m-auto w-1/2">
            <nav>
                <a href="/"> ← Go back</a>
            </nav>
            <br>
            <h1 class="text-4xl font-sans">{frontmatter.title}</h1>
            <p>&nbsp;</p>
            <p>{frontmatter.date} · {frontmatter.minutesRead}</p>
            <p>&nbsp;</p>
            <p class="text-lg font-mono">{frontmatter.introduction}</p>
            <p>&nbsp;</p>
            <article class="prose">
                <slot />
            </article>
        </div>
    </body>
</html>
