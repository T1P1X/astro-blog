---
const {frontmatter} = Astro.props;
---
<style is:global>
    body{
        background-color: #1c1921;
        color: white;
    }
    h2{
        font-size: larger;
        color: red;
    }
</style>
<html lang="en">
    <head>
		<meta charset="utf-8" />
        <title>{frontmatter.title}</title>
    </head>
    <body> 
        <div class="flex flex-col m-auto w-1/2">
            <nav>
                <a href="/">Home</a>
            </nav>
            <h1 class="text-5xl font-sans">{frontmatter.title}</h1>
            <p>&nbsp;</p>
            <p>{frontmatter.date} Â· {frontmatter.minutesRead}</p>
            <p>&nbsp;</p>
            <p class="text-lg font-mono">{frontmatter.introduction}</p>
            <p>&nbsp;</p>
            <slot />
        </div>
    </body>
</html>
