---
const {frontmatter} = Astro.props;
---
<style is:global>
    body{
        background-color: lightgray;
    }
    h2{
        font-size: 24px;
        color: red;
    }
</style>
<html lang="en">
    <head>
		<meta charset="utf-8" />
        <title>{frontmatter.title}</title>
    </head>
    <body> 
        <nav>
            <ul><a href="/">Home</a></ul>
        </nav>
        <h1 class="text-5xl font-sans text-center">{frontmatter.title}</h1>
        <p>&nbsp;</p>
        <div class="m-auto w-1/2">
            <p class="text-lg font-mono">{frontmatter.introduction}</p>
            <p>&nbsp;</p>
            <slot class="font-mono"/>
        </div>
    </body>
</html>
